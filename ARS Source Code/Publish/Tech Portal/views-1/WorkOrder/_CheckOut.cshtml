@using Arke.ARS.TechnicianPortal.Models
@model WorkOrderModel

<div class="modal fade" id="modal-check-out">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" style="text-align:center;">Check Out</h4>
                <h5 class="modal-title" style="text-align:center;"><strong>If You Need to Leave a Job Unfinished, CONTACT and GET APPROVAL Before Leaving</strong></h5>
            </div>
            @using (Html.BeginForm("CheckOut", "WorkOrder"))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p>
                                Confirm check out from: <strong>@Model.Customer.CustomerName</strong>
                            </p>
                            <label for="notes-area">Notes</label>
                            <textarea class="form-control" id="notes-area" name="notes" rows="3"></textarea>
                            <input type="hidden" name="id" value="@Model.Id" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="lunch">How Long You Took Lunch</label>
                                <input type="number" class="form-control" rows="" id="lunch" name="lunch" required="required" value="0.00" step=".01" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="text-align:center;">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.ReturnNeedForParts" name="status">Return - Need for Parts</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.ReturnNeedToQuote" name="status">Return - Need to Quote</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.NeedToQuoteElectrical" name="status">Need to Quote - Electrical</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.NeedToQuoteGeneral" name="status">Need to Quote - General</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.NeedToQuotePlumbing" name="status">Need to Quote - Plumbing</button>
                    <button type="submit" class="btn btn-primary" value="@StatusCode.WorkComplete" id="work-complete-submit" name="status">Work Complete</button>
                </div>
            }
        </div>
    </div>
</div>
