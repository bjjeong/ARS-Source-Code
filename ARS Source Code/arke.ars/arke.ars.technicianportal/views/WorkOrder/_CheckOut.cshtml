@using Arke.ARS.TechnicianPortal.Models
@model WorkOrderModel

<div class="modal fade" id="modal-check-out">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Check out</h4>
            </div>
            @using (Html.BeginForm("CheckOut", "WorkOrder"))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p>
                                Confirm check out from: <strong>@Model.Customer.CustomerName</strong>
                            </p>
                            <label for="notes-area">Notes</label>
                            <textarea class="form-control" id="notes-area" name="notes" rows="3"></textarea>
                            <input type="hidden" name="id" value="@Model.Id" />
                        </div>
                    </div>
                    <div style="text-align:center;"><strong>**If you need to leave a job unfinished, CONTACT and GET APPROVAL before leaving** </strong></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.ReturnNeedToQuote" name="status">Return - Need to Quote</button>
                    <button type="submit" class="btn btn-default return-submit" value="@StatusCode.ReturnNeedForParts" name="status">Return - Need for Parts</button>
                    <button type="submit" class="btn btn-primary" value="@StatusCode.WorkComplete" id="work-complete-submit" name="status">Work Complete</button>
                </div>
            }
        </div>
    </div>
</div>
